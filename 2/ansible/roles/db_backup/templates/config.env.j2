# Database Backup Configuration

# Database Settings
DB_HOST="{{ db_host }}"
DB_PORT="{{ db_port }}"
DB_NAME="{{ db_name }}"
DB_USER="{{ db_user }}"
DB_PASSWORD="{{ db_password }}"

# Backup Storage
LOCAL_BACKUP_PATH="{{ local_backup_path }}"

# Encryption Settings
ENABLE_ENCRYPTION="{{ enable_encryption | lower }}"
ENCRYPTION_METHOD="{{ encryption_method }}"
ENCRYPTION_PASSWORD="{{ encryption_password }}"

# Remote Storage Type
STORAGE_TYPE="{{ storage_type }}"

# S3 Configuration
S3_BUCKET="{{ s3_bucket }}"
S3_PREFIX="{{ s3_prefix }}"
S3_REGION="{{ s3_region }}"

# FTP Configuration
FTP_HOST="{{ ftp_host }}"
FTP_PORT="{{ ftp_port }}"
FTP_USER="{{ ftp_user }}"
FTP_PASSWORD="{{ ftp_password }}"
FTP_PATH="{{ ftp_path }}"

# SSH/SCP Configuration
SSH_HOST="{{ ssh_host }}"
SSH_PORT="{{ ssh_port }}"
SSH_USER="{{ ssh_user }}"
SSH_PATH="{{ ssh_path }}"

# Retention Policy
RETENTION_DAYS="{{ retention_days }}"
