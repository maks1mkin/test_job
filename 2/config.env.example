# Database Backup Configuration

# Database Settings
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="mydatabase"
DB_USER="backup_user"
DB_PASSWORD="secure_password"

# Backup Storage
LOCAL_BACKUP_PATH="/var/backups/databases"

# Encryption Settings
ENABLE_ENCRYPTION="true"           
ENCRYPTION_METHOD="gpg"            # gpg or openssl

ENCRYPTION_PASSWORD="your_encryption_password"

# Remote Storage Type
STORAGE_TYPE="local"               # local, s3, ftp, or ssh

# S3 Configuration 
S3_BUCKET="my-backup-bucket"
S3_PREFIX="db-backups/"
S3_REGION="us-east-1"
# AWS credentials in ~/.aws/credentials 

# FTP Configuration 
FTP_HOST="ftp.maskimtech.com"
FTP_PORT="21"
FTP_USER="ftpuser"
FTP_PASSWORD="ftppassword"
FTP_PATH="/backups/"

# SSH/SCP Configuration 
SSH_HOST="backup-server.maskimtech.com"
SSH_PORT="22"
SSH_USER="backup"
SSH_PATH="/home/backup/databases"
# SSH key should be configured for passwordless login

# Retention Policy
RETENTION_DAYS="7"
